header.header
  a.header__logo(href="#top")
    img(src="/assets/svg/logo.svg" alt="уберем.")

  div.header__menu
    .header__headerMenu
      img(src="/assets/svg/logo.svg", alt="уберем.")
      buttom.header__crossIcon
        img(src="/assets/svg/crossicon.svg", alt="close")

    .header__switch
      each item in header.switchList
        a.header__switch__item(
          class=item.active && 'active',
          href=item.url,
          data-switch-id=item.id
        )= item.title

    nav.header__nav
      each link in header.navList
        a.header__nav_item(href=link.url)= link.title

    .header__info
      a.header__info_item.header__info_item-anim(href="tel:" + header.phone)
        = header.phone
      p.header__info_item
        = header.workTime

  button.header__menuIcon
    img(src="assets/svg/menuIcon.svg", alt="menu")